/**index.wxss**/

.top {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  width: 750rpx;
  align-items: center;
  justify-content: space-between;
  color: #62c4d9;
}

.weather {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 400rpx;
  justify-content: space-between;
  font-size: 28rpx;
}

.weather-img {
  width: 50rpx;
  height: 50rpx;
  margin: 20rpx;
}

.other {
  color: #62c4d9;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.time {
  font-size: 160rpx;
  font-weight: 600;
}

.set-time {
  line-height: 80rpx;
}

.radio-group {
  display: flex;
  flex-direction: row;
  width: 690rpx;
  margin: 30rpx;
  flex-wrap: wrap;
}

.radio {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 210rpx;
  margin: 10rpx;
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, 0.2);
  font-size: 26rpx;
}

.radio-top {
  display: flex;
  flex-direction: row;
}

.radio-img {
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx;
}

radio {
  transform: scale(0.4);
}

.start {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 10rpx solid #62c4d9;
  border-radius: 50%;
}

.start-text {
  margin: 30rpx 10rpx 20rpx 10rpx;
  font-size: 40rpx;
  font-weight: 600;
}

.start-img {
  width: 70rpx;
  height: 70rpx;
}

.end {
  margin: 200rpx;
  width: 300rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 10rpx solid #62c4d9;
  border-radius: 50%;
}

.end-text {
  font-size: 40rpx;
  font-weight: 600;
}
