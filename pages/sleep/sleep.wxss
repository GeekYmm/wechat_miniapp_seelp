/* pages/sleep/sleep.wxss */

.player {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 690rpx;
  margin: 30rpx;
  border: 2rpx solid #fff;
  border-radius: 20rpx;
  background-color: rgba(67, 200, 233, 0.2);
  align-items: center;
  color: #fff;
}

.player-img {
  width: 130rpx;
  height: 130rpx;
  margin: 24rpx;
}

.music {
  width: 480rpx;
  margin-right: 20rpx;
  text-align: center;
}

.player-text {
  margin: 30rpx;
  font-weight: 800;
}

.control {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 420rpx;
  justify-content: center;
}

.control image {
  width: 80rpx;
  height: 80rpx;
  margin: 4rpx;
}

.swiper_box {
  width: 100%;
  height: 250rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 250rpx;
}

.input-box {
  width: 750rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 50rpx 0 30rpx 0;
}

.input-box-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  margin: 25rpx;
  border: 4rpx solid #62c4d9;
  border-radius: 20rpx;
  background-color: rgba(72, 202, 235, 0.2);
  color: #62c4d9;
  padding: 20rpx;
  height: 400rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  margin: 10rpx;
}

.box-item {
  margin: 10rpx;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  align-items: center;
}

.box-item text {
  margin: 18rpx;
  font-weight: 600;
  border: 1rpx solid #62c4d9;
  width: 60rpx;
  text-align: center;
}

.box-item image {
  width: 30rpx;
  height: 30rpx;
  margin: 26rpx 10rpx 24rpx 10rpx;
}

.box-item switch {
  margin: 36rpx;
  zoom: 0.5;
}
